<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CommunityList">

    <!-- RecyclerView for displaying communities -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_communities"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Floating Action Button for joining or creating communities -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/plus" /> <!-- Change the src attribute to your desired icon -->

</FrameLayout>
